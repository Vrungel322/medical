<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="0dp"
      app:cardUseCompatPadding="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.651"
      >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <ImageView
          android:id="@+id/ivStatus"
          android:layout_width="6dp"
          android:layout_height="6dp"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="16dp"
          android:background="@color/colorPrimaryYellow"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvServiceType"
          />
      <TextView
          android:id="@+id/tvServiceType"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:fontFamily="sans-serif-medium"
          android:letterSpacing="-0.04"
          android:lineSpacingExtra="6.5sp"
          android:textColor="#5c5b6977"
          android:textSize="12sp"
          android:textStyle="normal"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="МЕД. УСЛУГИ, ПЛАТНЫЕ"
          />
      <TextView
          android:id="@+id/tvServiceName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginStart="16dp"
          android:fontFamily="sans-serif-medium"
          android:lineSpacingExtra="2.5sp"
          android:textColor="#e65b6977"
          android:textSize="16sp"
          android:textStyle="normal"
          app:layout_constraintBottom_toBottomOf="@+id/ivStatus"
          app:layout_constraintLeft_toRightOf="@+id/ivStatus"
          app:layout_constraintTop_toTopOf="@+id/ivStatus"
          tools:text="Маникюр, обновление"
          />

      <TextView
          android:id="@+id/tvServiceDescription"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:maxEms="18"
          android:maxLines="2"
          android:textColor="#a9b1b7"
          android:textSize="10sp"
          app:layout_constraintLeft_toLeftOf="@+id/tvServiceName"
          app:layout_constraintTop_toBottomOf="@+id/tvServiceName"
          tools:text="Профессиональная гигиена полости рта
ультразвуком
"
          />
      <TextView
          android:id="@+id/tvTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="24dp"
          android:fontFamily="sans-serif-medium"
          android:lineSpacingExtra="6.5sp"
          android:textColor="#659fe8"
          android:textSize="12sp"
          android:textStyle="normal"
          app:layout_constraintBottom_toBottomOf="@+id/tvServiceName"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@+id/tvServiceName"
          tools:text="18:00 pm"
          />
      <ImageView
          android:id="@+id/ivDiscard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/if_6_cross_1815573_copy"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/location_pin_1"
          app:layout_constraintLeft_toLeftOf="@+id/tvServiceDescription"
          app:layout_constraintTop_toBottomOf="@+id/tvServiceDescription"
          />
      <TextView
          android:id="@+id/tvAddress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:fontFamily="sans-serif"
          android:textColor="#a3a8b1"
          android:textSize="10sp"
          android:textStyle="normal"
          app:layout_constraintBottom_toBottomOf="@+id/imageView5"
          app:layout_constraintLeft_toRightOf="@+id/imageView5"
          app:layout_constraintTop_toTopOf="@+id/imageView5"
          tools:text="Партизанский проспект, 48-105"
          />
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/ivDoctorsPhoto"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginTop="8dp"
        android:background="@drawable/doctor_place_holder"
          app:layout_constraintLeft_toLeftOf="@+id/imageView5"
          app:layout_constraintTop_toBottomOf="@+id/imageView5"
          />

      <TextView
          android:id="@+id/tvDoctorsName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          android:fontFamily="sans-serif-medium"
          android:lineSpacingExtra="8.5sp"
          android:textColor="#5b6977"
          android:textSize="10sp"
          android:textStyle="normal"
          app:layout_constraintLeft_toRightOf="@+id/ivDoctorsPhoto"
          app:layout_constraintTop_toTopOf="@+id/ivDoctorsPhoto"
          tools:text="Виктория Алейникова"
          />
      <TextView
          android:id="@+id/tvDoctorsProf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="4dp"
          android:fontFamily="sans-serif"
          android:lineSpacingExtra="8.5sp"
          android:textColor="#a9b1b7"
          android:textSize="10sp"
          android:textStyle="normal"
          app:layout_constraintBottom_toBottomOf="@+id/ivDoctorsPhoto"
          app:layout_constraintLeft_toRightOf="@+id/ivDoctorsPhoto"
          app:layout_constraintTop_toBottomOf="@+id/tvDoctorsName"
          tools:text="Ведущий специалист-стоматолог"
          />
      <View
          android:id="@+id/textView4"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_marginTop="8dp"
          android:background="#e4e7ea"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tvDoctorsProf"
          />
      <TextView
          android:id="@+id/tvComments"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="16dp"
          android:fontFamily="sans-serif"
          android:letterSpacing="-0.03"
          android:lineSpacingExtra="6.5sp"
          android:textColor="#d9a3a8b1"
          android:textSize="12sp"
          android:textStyle="normal"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="@+id/ivStatus"
          app:layout_constraintTop_toBottomOf="@+id/textView4"
          tools:text="Отзывы (321)"
          />
      <TextView
          android:id="@+id/tvPostpone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="16dp"
          android:text="Перенести прием"
          android:textColor="#d9747f8a"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView4"
          />
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>