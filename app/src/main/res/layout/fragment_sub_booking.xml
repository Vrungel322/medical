<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6eef8"
    android:clickable="true"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="200dp"
      android:background="@drawable/doctors"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/gradient"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="148dp"
      android:background="@drawable/white_gradient"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView3"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="0dp"
      />
  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="16dp"
      android:fontFamily="sans-serif-medium"
      android:text="@string/menu_my_booking"
      android:textSize="20sp"
      android:textStyle="normal"
      app:layout_constraintLeft_toLeftOf="@+id/gradient"
      app:layout_constraintTop_toTopOf="@+id/gradient"
      android:layout_marginStart="8dp"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rvMyLastBooking"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="64dp"
      app:layout_constraintLeft_toLeftOf="@+id/gradient"
      app:layout_constraintRight_toRightOf="@+id/gradient"
      app:layout_constraintTop_toTopOf="@+id/gradient"
      />
</android.support.constraint.ConstraintLayout>